{
  "name": "bot-builder",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "craco build",
    "prepare": "husky install",
    "start": "craco start",
    "test": "craco test"
  },
  "lint-staged": {
    "package.json": "npx sort-package-json",
    "*.{ts,tsx,js,jsx,css,md}": "prettier --write",
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*": "prettier --ignore-unknown --write"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "react",
      "simple-import-sort",
      "sort-keys-fix",
      "unused-imports"
    ],
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "sort-keys": [
        "error",
        "asc",
        {
          "caseSensitive": true,
          "natural": false,
          "minKeys": 2
        }
      ],
      "react/jsx-curly-brace-presence": [
        "error",
        {
          "props": "never",
          "children": "ignore"
        }
      ],
      "react/jsx-sort-props": [
        "error",
        {
          "callbacksLast": true,
          "shorthandFirst": true,
          "shorthandLast": false,
          "ignoreCase": true,
          "noSortAlphabetically": false,
          "reservedFirst": [
            "key",
            "ref"
          ]
        }
      ],
      "react/react-in-jsx-scope": "off",
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error",
      "sort-keys-fix/sort-keys-fix": "warn",
      "unused-imports/no-unused-imports": "error"
    }
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!antd|@ant-design|rc-.+?|@babel/runtime).+(js|jsx)$"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "antd": "^4.18.9",
    "firebase": "^9.6.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-firebase-hooks": "^5.0.3",
    "react-flow-renderer": "^10.0.6",
    "react-router-dom": "^6.2.2",
    "react-scripts": "5.0.0",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0",
    "xstate": "^4.30.6"
  },
  "devDependencies": {
    "@craco/craco": "^6.4.3",
    "autoprefixer": "^10.4.2",
    "craco-less": "^2.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "postcss": "^8.4.8",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.23"
  }
}
